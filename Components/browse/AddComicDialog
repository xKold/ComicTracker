import React, { useState } from "react";
import { base44 } from "@/api/base44Client";
import { useMutation } from "@tanstack/react-query";
import {
  Dialog,
  DialogContent,
  DialogHeader,
  DialogTitle,
  DialogFooter,
} from "@/components/ui/dialog";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Textarea } from "@/components/ui/textarea";
import {
  Select,
  SelectContent,
  SelectItem,
  SelectTrigger,
  SelectValue,
} from "@/components/ui/select";
import { Plus, X } from "lucide-react";
import { toast } from "sonner";

export default function AddComicDialog({ open, onClose, onSuccess }) {
  const [formData, setFormData] = useState({
    title: "",
    description: "",
    cover_url: "",
    author: "",
    artist: "",
    total_chapters: 0,
    status: "ongoing",
    genres: [],
    type: "manga",
    release_schedule: "",
    year: new Date().getFullYear(),
  });
  
  const [currentGenre, setCurrentGenre] = useState("");

  const createMutation = useMutation({
    mutationFn: (data) => base44.entities.Comic.create(data),
    onSuccess: () => {
      toast.success("Comic added successfully!");
      onSuccess();
      resetForm();
    },
    onError: (error) => {
      toast.error("Failed to add comic");
      console.error(error);
    },
  });

  const resetForm = () => {
    setFormData({
      title: "",
      description: "",
      cover_url: "",
      author: "",
      artist: "",
      total_chapters: 0,
      status: "ongoing",
      genres: [],
      type: "manga",
      release_schedule: "",
      year: new Date().getFullYear(),
    });
    setCurrentGenre("");
  };

  const handleSubmit = (e) => {
    e.preventDefault();
    if (!formData.title) {
      toast.error("Title is required");
      return;
    }
    createMutation.mutate(formData);
  };

  const addGenre = () => {
    if (currentGenre && !formData.genres.includes(currentGenre)) {
      setFormData(prev => ({
        ...prev,
        genres: [...prev.genres, currentGenre]
      }));
      setCurrentGenre("");
    }
  };

  const removeGenre = (genre) => {
    setFormData(prev => ({
      ...prev,
      genres: prev.genres.filter(g => g !== genre)
    }));
  };

  return (
    <Dialog open={open} onOpenChange={onClose}>
      <DialogContent className="max-w-2xl max-h-[90vh] overflow-y-auto bg-slate-900 border-purple-800/50 text-purple-100">
        <DialogHeader>
          <DialogTitle className="text-2xl bg-gradient-to-r from-purple-400 to-fuchsia-400 bg-clip-text text-transparent">
            Add New Comic
          </DialogTitle>
        </DialogHeader>

        <form onSubmit={handleSubmit} className="space-y-4">
          <div>
            <Label htmlFor="title" className="text-purple-300">Title *</Label>
            <Input
              id="title"
              value={formData.title}
              onChange={(e) => setFormData(prev => ({ ...prev, title: e.target.value }))}
              placeholder="Enter comic title"
              className="bg-slate-950/50 border-purple-800/50 text-purple-100"
              required
            />
          </div>

          <div>
            <Label htmlFor="description" className="text-purple-300">Description</Label>
            <Textarea
              id="description"
              value={formData.description}
              onChange={(e) => setFormData(prev => ({ ...prev, description: e.target.value }))}
              placeholder="Enter synopsis..."
              rows={4}
              className="bg-slate-950/50 border-purple-800/50 text-purple-100"
            />
          </div>

          <div className="grid md:grid-cols-2 gap-4">
            <div>
              <Label htmlFor="type" className="text-purple-300">Type</Label>
              <Select
                value={formData.type}
                onValueChange={(value) => setFormData(prev => ({ ...prev, type: value }))}
              >
                <SelectTrigger className="bg-slate-950/50 border-purple-800/50 text-purple-100">
                  <SelectValue />
                </SelectTrigger>
                <SelectContent className="bg-slate-900 border-purple-800/50">
                  <SelectItem value="manga">Manga</SelectItem>
                  <SelectItem value="manwha">Manwha</SelectItem>
                  <SelectItem value="manhua">Manhua</SelectItem>
                  <SelectItem value="comic">Comic</SelectItem>
                </SelectContent>
              </Select>
            </div>

            <div>
              <Label htmlFor="status" className="text-purple-300">Status</Label>
              <Select
                value={formData.status}
                onValueChange={(value) => setFormData(prev => ({ ...prev, status: value }))}
              >
                <SelectTrigger className="bg-slate-950/50 border-purple-800/50 text-purple-100">
                  <SelectValue />
                </SelectTrigger>
                <SelectContent className="bg-slate-900 border-purple-800/50">
                  <SelectItem value="ongoing">Ongoing</SelectItem>
                  <SelectItem value="completed">Completed</SelectItem>
                  <SelectItem value="hiatus">Hiatus</SelectItem>
                  <SelectItem value="cancelled">Cancelled</SelectItem>
                </SelectContent>
              </Select>
            </div>
          </div>

          <div className="grid md:grid-cols-2 gap-4">
            <div>
              <Label htmlFor="author" className="text-purple-300">Author</Label>
              <Input
                id="author"
                value={formData.author}
                onChange={(e) => setFormData(prev => ({ ...prev, author: e.target.value }))}
                placeholder="Author name"
                className="bg-slate-950/50 border-purple-800/50 text-purple-100"
              />
            </div>

            <div>
              <Label htmlFor="artist" className="text-purple-300">Artist</Label>
              <Input
                id="artist"
                value={formData.artist}
                onChange={(e) => setFormData(prev => ({ ...prev, artist: e.target.value }))}
                placeholder="Artist name"
                className="bg-slate-950/50 border-purple-800/50 text-purple-100"
              />
            </div>
          </div>

          <div>
            <Label htmlFor="cover_url" className="text-purple-300">Cover Image URL</Label>
            <Input
              id="cover_url"
              value={formData.cover_url}
              onChange={(e) => setFormData(prev => ({ ...prev, cover_url: e.target.value }))}
              placeholder="https://example.com/cover.jpg"
              className="bg-slate-950/50 border-purple-800/50 text-purple-100"
            />
          </div>

          <div className="grid md:grid-cols-2 gap-4">
            <div>
              <Label htmlFor="total_chapters" className="text-purple-300">Total Chapters</Label>
              <Input
                id="total_chapters"
                type="number"
                min="0"
                value={formData.total_chapters}
                onChange={(e) => setFormData(prev => ({ ...prev, total_chapters: parseInt(e.target.value) || 0 }))}
                className="bg-slate-950/50 border-purple-800/50 text-purple-100"
              />
            </div>

            <div>
              <Label htmlFor="year" className="text-purple-300">Year</Label>
              <Input
                id="year"
                type="number"
                min="1900"
                max="2100"
                value={formData.year}
                onChange={(e) => setFormData(prev => ({ ...prev, year: parseInt(e.target.value) || new Date().getFullYear() }))}
                className="bg-slate-950/50 border-purple-800/50 text-purple-100"
              />
            </div>
          </div>

          <div>
            <Label className="text-purple-300">Genres</Label>
            <div className="flex gap-2 mb-2">
              <Input
                value={currentGenre}
                onChange={(e) => setCurrentGenre(e.target.value)}
                placeholder="Add genre"
                onKeyPress={(e) => e.key === 'Enter' && (e.preventDefault(), addGenre())}
                className="bg-slate-950/50 border-purple-800/50 text-purple-100"
              />
              <Button type="button" onClick={addGenre} size="icon" className="bg-purple-600 hover:bg-purple-700">
                <Plus className="w-4 h-4" />
              </Button>
            </div>
            <div className="flex flex-wrap gap-2">
              {formData.genres.map((genre, i) => (
                <div key={i} className="bg-purple-900/30 text-purple-300 px-3 py-1 rounded-full text-sm flex items-center gap-2 border border-purple-700/50">
                  {genre}
                  <button type="button" onClick={() => removeGenre(genre)}>
                    <X className="w-3 h-3" />
                  </button>
                </div>
              ))}
            </div>
          </div>

          <div>
            <Label htmlFor="release_schedule" className="text-purple-300">Release Schedule</Label>
            <Input
              id="release_schedule"
              value={formData.release_schedule}
              onChange={(e) => setFormData(prev => ({ ...prev, release_schedule: e.target.value }))}
              placeholder="e.g., Weekly on Monday"
              className="bg-slate-950/50 border-purple-800/50 text-purple-100"
            />
          </div>

          <DialogFooter>
            <Button type="button" variant="outline" onClick={onClose} className="border-purple-800/50 text-purple-300 hover:bg-purple-900/30">
              Cancel
            </Button>
            <Button 
              type="submit" 
              className="bg-gradient-to-r from-purple-600 to-fuchsia-600 hover:from-purple-700 hover:to-fuchsia-700"
              disabled={createMutation.isPending}
            >
              {createMutation.isPending ? "Adding..." : "Add Comic"}
            </Button>
          </DialogFooter>
        </form>
      </DialogContent>
    </Dialog>
  );
}