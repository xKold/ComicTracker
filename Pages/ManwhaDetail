import React, { useState, useEffect } from "react";
import { base44 } from "@/api/base44Client";
import { useQuery, useMutation, useQueryClient } from "@tanstack/react-query";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import { ArrowLeft, Star, Calendar, User, Pencil, BookOpen } from "lucide-react";
import { useNavigate } from "react-router-dom";
import { createPageUrl } from "@/utils";
import ProgressTracker from "../components/detail/ProgressTracker";
import StatusSelector from "../components/detail/StatusSelector";

export default function ManwhaDetail() {
  const navigate = useNavigate();
  const queryClient = useQueryClient();
  const urlParams = new URLSearchParams(window.location.search);
  const manwhaId = urlParams.get('id');

  const { data: manwha, isLoading: manwhaLoading } = useQuery({
    queryKey: ['manwha', manwhaId],
    queryFn: async () => {
      const list = await base44.entities.Manwha.list();
      return list.find(m => m.id === manwhaId);
    },
    enabled: !!manwhaId,
  });

  const { data: user } = useQuery({
    queryKey: ['user'],
    queryFn: () => base44.auth.me(),
  });

  const { data: userProgress } = useQuery({
    queryKey: ['userProgress', manwhaId],
    queryFn: async () => {
      const currentUser = await base44.auth.me();
      const progress = await base44.entities.UserProgress.filter({ 
        manwha_id: manwhaId,
        created_by: currentUser.email 
      });
      return progress[0] || null;
    },
    enabled: !!manwhaId && !!user,
  });

  const createProgressMutation = useMutation({
    mutationFn: (data) => base44.entities.UserProgress.create(data),
    onSuccess: () => {
      queryClient.invalidateQueries(['userProgress', manwhaId]);
    },
  });

  const updateProgressMutation = useMutation({
    mutationFn: ({ id, data }) => base44.entities.UserProgress.update(id, data),
    onSuccess: () => {
      queryClient.invalidateQueries(['userProgress', manwhaId]);
    },
  });

  const handleStatusChange = async (newStatus) => {
    const data = { status: newStatus };
    
    if (newStatus === 'reading' && !userProgress?.started_reading) {
      data.started_reading = new Date().toISOString().split('T')[0];
    }
    if (newStatus === 'completed') {
      data.completed_reading = new Date().toISOString().split('T')[0];
      data.current_chapter = manwha.total_chapters;
    }
    
    if (userProgress) {
      updateProgressMutation.mutate({ id: userProgress.id, data });
    } else {
      createProgressMutation.mutate({ manwha_id: manwhaId, ...data });
    }
  };

  const handleChapterUpdate = async (chapter) => {
    const data = { 
      current_chapter: chapter,
      status: chapter === manwha.total_chapters ? 'completed' : (userProgress?.status || 'reading')
    };
    
    if (!userProgress?.started_reading && chapter > 0) {
      data.started_reading = new Date().toISOString().split('T')[0];
    }
    
    if (chapter === manwha.total_chapters) {
      data.completed_reading = new Date().toISOString().split('T')[0];
    }
    
    if (userProgress) {
      updateProgressMutation.mutate({ id: userProgress.id, data });
    } else {
      createProgressMutation.mutate({ manwha_id: manwhaId, ...data });
    }
  };

  const handleFavoriteToggle = async () => {
    const data = { is_favorite: !userProgress?.is_favorite };
    
    if (userProgress) {
      updateProgressMutation.mutate({ id: userProgress.id, data });
    } else {
      createProgressMutation.mutate({ manwha_id: manwhaId, ...data });
    }
  };

  const handleRatingChange = async (rating) => {
    const data = { rating };
    
    if (userProgress) {
      updateProgressMutation.mutate({ id: userProgress.id, data });
    } else {
      createProgressMutation.mutate({ manwha_id: manwhaId, ...data });
    }
  };

  if (manwhaLoading) {
    return (
      <div className="min-h-screen flex items-center justify-center">
        <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-purple-600" />
      </div>
    );
  }

  if (!manwha) {
    return (
      <div className="min-h-screen flex items-center justify-center">
        <div className="text-center">
          <h2 className="text-2xl font-bold text-gray-700 mb-2">Manwha not found</h2>
          <Button onClick={() => navigate(createPageUrl('Browse'))}>
            Go to Browse
          </Button>
        </div>
      </div>
    );
  }

  const statusColors = {
    ongoing: "bg-green-100 text-green-700 border-green-200",
    completed: "bg-blue-100 text-blue-700 border-blue-200",
    hiatus: "bg-yellow-100 text-yellow-700 border-yellow-200",
  };

  return (
    <div className="min-h-screen">
      {/* Hero Section */}
      <div className="relative h-[400px] bg-gradient-to-br from-purple-600 via-pink-600 to-blue-600 overflow-hidden">
        <div className="absolute inset-0 bg-black/30" />
        {manwha.cover_url && (
          <img 
            src={manwha.cover_url} 
            alt={manwha.title}
            className="absolute inset-0 w-full h-full object-cover opacity-20"
          />
        )}
        
        <div className="relative max-w-7xl mx-auto px-6 md:px-8 h-full flex flex-col justify-end pb-12">
          <Button
            variant="ghost"
            onClick={() => navigate(createPageUrl('Browse'))}
            className="absolute top-6 left-6 text-white hover:bg-white/20"
          >
            <ArrowLeft className="w-5 h-5 mr-2" />
            Back
          </Button>
          
          <div className="flex flex-col md:flex-row gap-6 items-end">
            {manwha.cover_url && (
              <img 
                src={manwha.cover_url}
                alt={manwha.title}
                className="w-40 h-56 object-cover rounded-2xl shadow-2xl border-4 border-white"
              />
            )}
            
            <div className="flex-1 text-white pb-2">
              <h1 className="text-4xl md:text-5xl font-bold mb-3">{manwha.title}</h1>
              <div className="flex flex-wrap gap-2 items-center">
                <Badge className={`${statusColors[manwha.status]} border`}>
                  {manwha.status}
                </Badge>
                {manwha.genres?.map((genre, i) => (
                  <Badge key={i} variant="secondary" className="bg-white/20 text-white border-white/30">
                    {genre}
                  </Badge>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>

      {/* Content */}
      <div className="max-w-7xl mx-auto px-6 md:px-8 py-8">
        <div className="grid lg:grid-cols-3 gap-8">
          {/* Main Content */}
          <div className="lg:col-span-2 space-y-6">
            {/* Description */}
            <div className="bg-white/80 backdrop-blur rounded-2xl p-6 border border-purple-100 shadow-lg">
              <h2 className="text-xl font-bold text-gray-800 mb-3">Synopsis</h2>
              <p className="text-gray-600 leading-relaxed">{manwha.description || 'No description available.'}</p>
            </div>

            {/* Details */}
            <div className="bg-white/80 backdrop-blur rounded-2xl p-6 border border-purple-100 shadow-lg">
              <h2 className="text-xl font-bold text-gray-800 mb-4">Details</h2>
              <div className="grid md:grid-cols-2 gap-4">
                {manwha.author && (
                  <div className="flex items-center gap-3">
                    <div className="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center">
                      <User className="w-5 h-5 text-purple-600" />
                    </div>
                    <div>
                      <p className="text-sm text-gray-500">Author</p>
                      <p className="font-medium text-gray-800">{manwha.author}</p>
                    </div>
                  </div>
                )}
                
                {manwha.artist && (
                  <div className="flex items-center gap-3">
                    <div className="w-10 h-10 bg-pink-100 rounded-lg flex items-center justify-center">
                      <Pencil className="w-5 h-5 text-pink-600" />
                    </div>
                    <div>
                      <p className="text-sm text-gray-500">Artist</p>
                      <p className="font-medium text-gray-800">{manwha.artist}</p>
                    </div>
                  </div>
                )}
                
                <div className="flex items-center gap-3">
                  <div className="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                    <BookOpen className="w-5 h-5 text-blue-600" />
                  </div>
                  <div>
                    <p className="text-sm text-gray-500">Total Chapters</p>
                    <p className="font-medium text-gray-800">{manwha.total_chapters}</p>
                  </div>
                </div>
                
                {manwha.release_schedule && (
                  <div className="flex items-center gap-3">
                    <div className="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
                      <Calendar className="w-5 h-5 text-green-600" />
                    </div>
                    <div>
                      <p className="text-sm text-gray-500">Release Schedule</p>
                      <p className="font-medium text-gray-800">{manwha.release_schedule}</p>
                    </div>
                  </div>
                )}
              </div>
            </div>
          </div>

          {/* Sidebar - Progress Tracker */}
          <div className="space-y-6">
            <StatusSelector
              currentStatus={userProgress?.status}
              onStatusChange={handleStatusChange}
            />
            
            <ProgressTracker
              manwha={manwha}
              userProgress={userProgress}
              onChapterUpdate={handleChapterUpdate}
              onFavoriteToggle={handleFavoriteToggle}
              onRatingChange={handleRatingChange}
            />
          </div>
        </div>
      </div>
    </div>
  );
}