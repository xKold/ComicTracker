import React, { useState } from "react";
import { base44 } from "@/api/base44Client";
import { useMutation, useQueryClient } from "@tanstack/react-query";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Card, CardContent, CardHeader, CardTitle, CardDescription } from "@/components/ui/card";
import { Alert, AlertDescription } from "@/components/ui/alert";
import { Download, Search, AlertCircle, CheckCircle2, Loader2 } from "lucide-react";
import { toast } from "sonner";

export default function Import() {
  const [searchQuery, setSearchQuery] = useState("");
  const [isSearching, setIsSearching] = useState(false);
  const [searchResults, setSearchResults] = useState([]);
  const [error, setError] = useState(null);
  const queryClient = useQueryClient();

  const createComicMutation = useMutation({
    mutationFn: (data) => base44.entities.Comic.create(data),
    onSuccess: () => {
      queryClient.invalidateQueries({ queryKey: ['comics'] });
      toast.success("Comic added successfully!");
    },
    onError: (error) => {
      toast.error("Failed to add comic");
      console.error(error);
    },
  });

  const handleSearch = async () => {
    if (!searchQuery.trim()) {
      setError("Please enter a search term");
      return;
    }

    setIsSearching(true);
    setError(null);
    setSearchResults([]);

    try {
      const prompt = `Search for manga/manwha/manhua titled "${searchQuery}" and provide detailed information. 
      Include: title, description, author, artist, total chapters available, publication status (ongoing/completed/hiatus), 
      genres (as array), type (manga/manwha/manhua), release year, and if possible a cover image URL from MangaDex or similar sources.
      
      Return up to 5 results if there are multiple matches.`;

      const result = await base44.integrations.Core.InvokeLLM({
        prompt: prompt,
        add_context_from_internet: true,
        response_json_schema: {
          type: "object",
          properties: {
            results: {
              type: "array",
              items: {
                type: "object",
                properties: {
                  title: { type: "string" },
                  description: { type: "string" },
                  author: { type: "string" },
                  artist: { type: "string" },
                  total_chapters: { type: "number" },
                  status: { type: "string" },
                  genres: { 
                    type: "array",
                    items: { type: "string" }
                  },
                  type: { type: "string" },
                  year: { type: "number" },
                  cover_url: { type: "string" }
                }
              }
            }
          }
        }
      });

      if (result.results && result.results.length > 0) {
        setSearchResults(result.results);
      } else {
        setError("No results found. Try a different search term.");
      }
    } catch (err) {
      setError("Failed to search. Please try again.");
      console.error(err);
    } finally {
      setIsSearching(false);
    }
  };

  const handleImport = async (comic) => {
    const comicData = {
      title: comic.title,
      description: comic.description,
      author: comic.author,
      artist: comic.artist,
      total_chapters: comic.total_chapters || 0,
      status: comic.status?.toLowerCase() || 'ongoing',
      genres: comic.genres || [],
      type: comic.type?.toLowerCase() || 'manga',
      year: comic.year || new Date().getFullYear(),
      cover_url: comic.cover_url || '',
      last_updated: new Date().toISOString().split('T')[0]
    };

    createComicMutation.mutate(comicData);
  };

  return (
    <div className="min-h-screen p-6 md:p-8">
      <div className="max-w-5xl mx-auto">
        <div className="mb-8">
          <h1 className="text-4xl md:text-5xl font-bold bg-gradient-to-r from-purple-400 via-fuchsia-400 to-purple-300 bg-clip-text text-transparent mb-2">
            Import Comics
          </h1>
          <p className="text-purple-300/70">Search and import comics from the web</p>
        </div>

        {/* Info Alert */}
        <Alert className="mb-6 bg-slate-900/50 border-purple-800/50">
          <AlertCircle className="h-4 w-4 text-purple-400" />
          <AlertDescription className="text-purple-300/70">
            This feature uses AI to search the web for comic information from sources like MangaDex, Bato.to, and other manga databases. 
            Search results may take a few seconds to load.
          </AlertDescription>
        </Alert>

        {/* Search Card */}
        <Card className="mb-8 bg-slate-900/50 border-purple-800/30 shadow-lg shadow-purple-900/20">
          <CardHeader>
            <CardTitle className="text-purple-300">Search for Comics</CardTitle>
            <CardDescription className="text-purple-400/70">
              Enter the title of a manga, manwha, or manhua
            </CardDescription>
          </CardHeader>
          <CardContent>
            <div className="flex gap-3">
              <Input
                placeholder="e.g., Solo Leveling, One Piece, Tower of God..."
                value={searchQuery}
                onChange={(e) => setSearchQuery(e.target.value)}
                onKeyPress={(e) => e.key === 'Enter' && handleSearch()}
                className="flex-1 bg-slate-950/50 border-purple-800/50 text-purple-100 placeholder:text-purple-400/50"
                disabled={isSearching}
              />
              <Button
                onClick={handleSearch}
                disabled={isSearching}
                className="bg-gradient-to-r from-purple-600 to-fuchsia-600 hover:from-purple-700 hover:to-fuchsia-700 shadow-lg shadow-purple-500/30"
              >
                {isSearching ? (
                  <>
                    <Loader2 className="w-4 h-4 mr-2 animate-spin" />
                    Searching...
                  </>
                ) : (
                  <>
                    <Search className="w-4 h-4 mr-2" />
                    Search
                  </>
                )}
              </Button>
            </div>

            {error && (
              <Alert className="mt-4 bg-red-950/30 border-red-800/50">
                <AlertCircle className="h-4 w-4 text-red-400" />
                <AlertDescription className="text-red-300">{error}</AlertDescription>
              </Alert>
            )}
          </CardContent>
        </Card>

        {/* Search Results */}
        {searchResults.length > 0 && (
          <div className="space-y-4">
            <h2 className="text-2xl font-bold text-purple-300 mb-4">
              Found {searchResults.length} result{searchResults.length > 1 ? 's' : ''}
            </h2>
            
            {searchResults.map((comic, index) => (
              <Card key={index} className="bg-slate-900/50 border-purple-800/30 shadow-lg shadow-purple-900/20">
                <CardContent className="p-6">
                  <div className="flex gap-6">
                    {comic.cover_url && (
                      <img
                        src={comic.cover_url}
                        alt={comic.title}
                        className="w-32 h-44 object-cover rounded-lg border border-purple-800/30"
                        onError={(e) => e.target.style.display = 'none'}
                      />
                    )}
                    
                    <div className="flex-1">
                      <div className="flex items-start justify-between mb-3">
                        <div>
                          <h3 className="text-xl font-bold text-purple-200 mb-1">{comic.title}</h3>
                          <p className="text-sm text-purple-400/70">
                            {comic.type?.toUpperCase()} • {comic.status} • {comic.total_chapters || '?'} chapters
                          </p>
                        </div>
                        <Button
                          onClick={() => handleImport(comic)}
                          disabled={createComicMutation.isPending}
                          size="sm"
                          className="bg-gradient-to-r from-purple-600 to-fuchsia-600 hover:from-purple-700 hover:to-fuchsia-700"
                        >
                          {createComicMutation.isPending ? (
                            <Loader2 className="w-4 h-4 animate-spin" />
                          ) : (
                            <>
                              <Download className="w-4 h-4 mr-2" />
                              Import
                            </>
                          )}
                        </Button>
                      </div>

                      {comic.author && (
                        <p className="text-sm text-purple-300/70 mb-2">
                          <span className="font-medium">Author:</span> {comic.author}
                          {comic.artist && ` • Artist: ${comic.artist}`}
                        </p>
                      )}

                      {comic.description && (
                        <p className="text-sm text-purple-300/70 line-clamp-3 mb-3">
                          {comic.description}
                        </p>
                      )}

                      {comic.genres && comic.genres.length > 0 && (
                        <div className="flex flex-wrap gap-2">
                          {comic.genres.map((genre, i) => (
                            <span
                              key={i}
                              className="px-2 py-1 text-xs rounded-full bg-purple-900/30 text-purple-300 border border-purple-800/30"
                            >
                              {genre}
                            </span>
                          ))}
                        </div>
                      )}
                    </div>
                  </div>
                </CardContent>
              </Card>
            ))}
          </div>
        )}
      </div>
    </div>
  );
}