import React, { useState, useEffect } from "react";
import { base44 } from "@/api/base44Client";
import { useQuery, useMutation, useQueryClient } from "@tanstack/react-query";
import { Button } from "@/components/ui/button";
import { Badge } from "@/components/ui/badge";
import { ArrowLeft, Star, Calendar, User, Pencil, BookOpen } from "lucide-react";
import { useNavigate } from "react-router-dom";
import { createPageUrl } from "@/utils";
import ProgressTracker from "../components/detail/ProgressTracker";
import StatusSelector from "../components/detail/StatusSelector";

export default function ComicDetail() {
  const navigate = useNavigate();
  const queryClient = useQueryClient();
  const urlParams = new URLSearchParams(window.location.search);
  const comicId = urlParams.get('id');

  const { data: comic, isLoading: comicLoading } = useQuery({
    queryKey: ['comic', comicId],
    queryFn: async () => {
      const list = await base44.entities.Comic.list();
      return list.find(m => m.id === comicId);
    },
    enabled: !!comicId,
  });

  const { data: user } = useQuery({
    queryKey: ['user'],
    queryFn: () => base44.auth.me(),
  });

  const { data: userProgress } = useQuery({
    queryKey: ['userProgress', comicId],
    queryFn: async () => {
      const currentUser = await base44.auth.me();
      const progress = await base44.entities.UserProgress.filter({ 
        comic_id: comicId,
        created_by: currentUser.email 
      });
      return progress[0] || null;
    },
    enabled: !!comicId && !!user,
  });

  const createProgressMutation = useMutation({
    mutationFn: (data) => base44.entities.UserProgress.create(data),
    onSuccess: () => {
      queryClient.invalidateQueries(['userProgress', comicId]);
    },
  });

  const updateProgressMutation = useMutation({
    mutationFn: ({ id, data }) => base44.entities.UserProgress.update(id, data),
    onSuccess: () => {
      queryClient.invalidateQueries(['userProgress', comicId]);
    },
  });

  const handleStatusChange = async (newStatus) => {
    const data = { status: newStatus };
    
    if (newStatus === 'reading' && !userProgress?.started_reading) {
      data.started_reading = new Date().toISOString().split('T')[0];
    }
    if (newStatus === 'completed') {
      data.completed_reading = new Date().toISOString().split('T')[0];
      data.current_chapter = comic.total_chapters;
    }
    
    if (userProgress) {
      updateProgressMutation.mutate({ id: userProgress.id, data });
    } else {
      createProgressMutation.mutate({ comic_id: comicId, ...data });
    }
  };

  const handleChapterUpdate = async (chapter) => {
    const data = { 
      current_chapter: chapter,
      status: chapter === comic.total_chapters ? 'completed' : (userProgress?.status || 'reading')
    };
    
    if (!userProgress?.started_reading && chapter > 0) {
      data.started_reading = new Date().toISOString().split('T')[0];
    }
    
    if (chapter === comic.total_chapters) {
      data.completed_reading = new Date().toISOString().split('T')[0];
    }
    
    if (userProgress) {
      updateProgressMutation.mutate({ id: userProgress.id, data });
    } else {
      createProgressMutation.mutate({ comic_id: comicId, ...data });
    }
  };

  const handleFavoriteToggle = async () => {
    const data = { is_favorite: !userProgress?.is_favorite };
    
    if (userProgress) {
      updateProgressMutation.mutate({ id: userProgress.id, data });
    } else {
      createProgressMutation.mutate({ comic_id: comicId, ...data });
    }
  };

  const handleRatingChange = async (rating) => {
    const data = { rating };
    
    if (userProgress) {
      updateProgressMutation.mutate({ id: userProgress.id, data });
    } else {
      createProgressMutation.mutate({ comic_id: comicId, ...data });
    }
  };

  if (comicLoading) {
    return (
      <div className="min-h-screen flex items-center justify-center">
        <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-purple-500" />
      </div>
    );
  }

  if (!comic) {
    return (
      <div className="min-h-screen flex items-center justify-center">
        <div className="text-center">
          <h2 className="text-2xl font-bold text-purple-300 mb-2">Comic not found</h2>
          <Button onClick={() => navigate(createPageUrl('Browse'))} className="bg-gradient-to-r from-purple-600 to-fuchsia-600">
            Go to Browse
          </Button>
        </div>
      </div>
    );
  }

  const statusColors = {
    ongoing: "bg-green-900/30 text-green-300 border-green-700/50",
    completed: "bg-blue-900/30 text-blue-300 border-blue-700/50",
    hiatus: "bg-yellow-900/30 text-yellow-300 border-yellow-700/50",
    cancelled: "bg-red-900/30 text-red-300 border-red-700/50",
  };

  const typeColors = {
    manga: "bg-purple-900/30 text-purple-300 border-purple-700/50",
    manwha: "bg-fuchsia-900/30 text-fuchsia-300 border-fuchsia-700/50",
    manhua: "bg-pink-900/30 text-pink-300 border-pink-700/50",
    comic: "bg-blue-900/30 text-blue-300 border-blue-700/50",
  };

  return (
    <div className="min-h-screen">
      {/* Hero Section */}
      <div className="relative h-[400px] bg-gradient-to-br from-purple-900 via-fuchsia-900 to-slate-900 overflow-hidden">
        <div className="absolute inset-0 bg-black/50" />
        {comic.cover_url && (
          <img 
            src={comic.cover_url} 
            alt={comic.title}
            className="absolute inset-0 w-full h-full object-cover opacity-20"
          />
        )}
        
        <div className="relative max-w-7xl mx-auto px-6 md:px-8 h-full flex flex-col justify-end pb-12">
          <Button
            variant="ghost"
            onClick={() => navigate(createPageUrl('Browse'))}
            className="absolute top-6 left-6 text-white hover:bg-white/10"
          >
            <ArrowLeft className="w-5 h-5 mr-2" />
            Back
          </Button>
          
          <div className="flex flex-col md:flex-row gap-6 items-end">
            {comic.cover_url && (
              <img 
                src={comic.cover_url}
                alt={comic.title}
                className="w-40 h-56 object-cover rounded-2xl shadow-2xl border-4 border-purple-500/30"
              />
            )}
            
            <div className="flex-1 text-white pb-2">
              <h1 className="text-4xl md:text-5xl font-bold mb-3">{comic.title}</h1>
              <div className="flex flex-wrap gap-2 items-center">
                {comic.type && (
                  <Badge className={`${typeColors[comic.type]} border font-semibold`}>
                    {comic.type.toUpperCase()}
                  </Badge>
                )}
                <Badge className={`${statusColors[comic.status]} border`}>
                  {comic.status}
                </Badge>
                {comic.genres?.map((genre, i) => (
                  <Badge key={i} variant="secondary" className="bg-white/10 text-white border-white/20">
                    {genre}
                  </Badge>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>

      {/* Content */}
      <div className="max-w-7xl mx-auto px-6 md:px-8 py-8">
        <div className="grid lg:grid-cols-3 gap-8">
          {/* Main Content */}
          <div className="lg:col-span-2 space-y-6">
            {/* Description */}
            <div className="bg-slate-900/50 backdrop-blur rounded-2xl p-6 border border-purple-800/30 shadow-lg shadow-purple-900/20">
              <h2 className="text-xl font-bold text-purple-300 mb-3">Synopsis</h2>
              <p className="text-purple-200/70 leading-relaxed">{comic.description || 'No description available.'}</p>
            </div>

            {/* Details */}
            <div className="bg-slate-900/50 backdrop-blur rounded-2xl p-6 border border-purple-800/30 shadow-lg shadow-purple-900/20">
              <h2 className="text-xl font-bold text-purple-300 mb-4">Details</h2>
              <div className="grid md:grid-cols-2 gap-4">
                {comic.author && (
                  <div className="flex items-center gap-3">
                    <div className="w-10 h-10 bg-purple-900/30 rounded-lg flex items-center justify-center">
                      <User className="w-5 h-5 text-purple-400" />
                    </div>
                    <div>
                      <p className="text-sm text-purple-400/70">Author</p>
                      <p className="font-medium text-purple-200">{comic.author}</p>
                    </div>
                  </div>
                )}
                
                {comic.artist && (
                  <div className="flex items-center gap-3">
                    <div className="w-10 h-10 bg-fuchsia-900/30 rounded-lg flex items-center justify-center">
                      <Pencil className="w-5 h-5 text-fuchsia-400" />
                    </div>
                    <div>
                      <p className="text-sm text-purple-400/70">Artist</p>
                      <p className="font-medium text-purple-200">{comic.artist}</p>
                    </div>
                  </div>
                )}
                
                <div className="flex items-center gap-3">
                  <div className="w-10 h-10 bg-blue-900/30 rounded-lg flex items-center justify-center">
                    <BookOpen className="w-5 h-5 text-blue-400" />
                  </div>
                  <div>
                    <p className="text-sm text-purple-400/70">Total Chapters</p>
                    <p className="font-medium text-purple-200">{comic.total_chapters}</p>
                  </div>
                </div>
                
                {comic.release_schedule && (
                  <div className="flex items-center gap-3">
                    <div className="w-10 h-10 bg-green-900/30 rounded-lg flex items-center justify-center">
                      <Calendar className="w-5 h-5 text-green-400" />
                    </div>
                    <div>
                      <p className="text-sm text-purple-400/70">Release Schedule</p>
                      <p className="font-medium text-purple-200">{comic.release_schedule}</p>
                    </div>
                  </div>
                )}
              </div>
            </div>
          </div>

          {/* Sidebar - Progress Tracker */}
          <div className="space-y-6">
            <StatusSelector
              currentStatus={userProgress?.status}
              onStatusChange={handleStatusChange}
            />
            
            <ProgressTracker
              comic={comic}
              userProgress={userProgress}
              onChapterUpdate={handleChapterUpdate}
              onFavoriteToggle={handleFavoriteToggle}
              onRatingChange={handleRatingChange}
            />
          </div>
        </div>
      </div>
    </div>
  );
}